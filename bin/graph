#!/bin/bash  # Ensure it runs using bash

# Check if the virtual environment "env" exists
if [ ! -d "env" ]; then
    echo "Creating virtual environment 'env'..."
    python3 -m venv env
    
    # Activate the virtual environment
    source env/bin/activate

    # Install dependencies from requirements.txt if it exists
    if [ -f "requirements.txt" ]; then
        echo "Installing dependencies from requirements.txt..."
        pip install -r requirements.txt
    else
        echo "No requirements.txt found, skipping dependency installation."
    fi
else
    echo "Virtual environment 'env' already exists."
    
    # Activate the virtual environment
    source env/bin/activate
fi

# Move into the bin directory
cd bin

# Run the Python script
python graph.py

# Return to the original directory
cd -

# Uncomment to display the contents of graph.json if needed
# cat graph.json
